<head>
    <title>Details about chosen student</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
<div class="table-data">
    <h1>Details about chosen student</h1>
    <table border="3">
        <tr>
            <th>â„–</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Project name</th>
            <th>Project description</th>
        </tr>

        <%
        if(userData.length!=0){
            var i=1;
        userData.forEach(function(data){
        %>
        <tr>
            <td><%=i; %></td>
            <td><%=data.name %></td>
            <td><%=data.surname %></td>
            <td><%=data.Name %></td>
            <td><%=data.description %></td>
        </tr>
        <%  i++; }) %>
        <% } else{ %>
            <tr>
                <td colspan="7">No Data Found (student doesn't exists or doesn't have any projects)</td>
            </tr>
        <% } %>
    </table>
</div>
</body>
</html>